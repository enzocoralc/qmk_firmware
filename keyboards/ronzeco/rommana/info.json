{
    "keyboard_name": "Rommana",
    "manufacturer": "Alaa Saad Mansour",
    "maintainer": "ronzeco",
    "url": "http://github.com/AlaaSaadAbdo/Rommana",
    "processor": "RP2040",
    "bootloader": "rp2040",
    "features": {
        "audio": false,
        "backlight": false,
        "bootmagic": true,
        "console": true,
        "encoder": false,
        "mousekey": false,
        "extrakey": true,
        "nkro": false,
        "quantum_painter": true,
        "rgb_matrix": false,
        "unicode": false,
        "usbpd": false,
        "wpm": false
    },
    "usb": {
        "vid": "0x524E",
        "pid": "0x524D"
    },
    "diode_direction": "COL2ROW",
    "matrix_pins": {
        "cols": [ "GP8", "GP7", "GP6", "GP5", "GP4" ],
        "rows": [ "GP14", "GP15", "GP26" ]
    },
    "oneshot": {
        "tap_toggle": 5,
        "timeout": 5000
    },
    "split": {
        "enabled": true,
        "bootmagic": {
            "matrix": [4, 4]
        },
        "transport": {
            "protocol": "serial_usart"
        },
        "soft_serial_pin": "GP0"
    },
    "layouts": {
        "LAYOUT": {
            "layout": [
                { "matrix": [0,0], "x": 0, "y": 0},
                { "matrix": [0,1], "x": 1, "y": 0},
                { "matrix": [0,2], "x": 2, "y": 0},
                { "matrix": [0,3], "x": 3, "y": 0},
                { "matrix": [0,4], "x": 4, "y": 0},

                { "matrix": [1,0], "x": 0, "y": 1},
                { "matrix": [1,1], "x": 1, "y": 1},
                { "matrix": [1,2], "x": 2, "y": 1},
                { "matrix": [1,3], "x": 3, "y": 1},
                { "matrix": [1,4], "x": 4, "y": 1},

                { "matrix": [2,0], "x": 3, "y": 3},
                { "matrix": [2,1], "x": 1, "y": 2},
                { "matrix": [2,2], "x": 2, "y": 2},
                { "matrix": [2,3], "x": 3, "y": 2},
                { "matrix": [2,4], "x": 4, "y": 3},

                { "matrix": [3,0], "x": 5, "y": 0},
                { "matrix": [3,1], "x": 6, "y": 0},
                { "matrix": [3,2], "x": 7, "y": 0},
                { "matrix": [3,3], "x": 8, "y": 0},
                { "matrix": [3,4], "x": 9, "y": 0},

                { "matrix": [4,0], "x": 5, "y": 1},
                { "matrix": [4,1], "x": 6, "y": 1},
                { "matrix": [4,2], "x": 7, "y": 1},
                { "matrix": [4,3], "x": 8, "y": 1},
                { "matrix": [4,4], "x": 9, "y": 1},

                { "matrix": [5,0], "x": 5, "y": 3},
                { "matrix": [5,1], "x": 6, "y": 2},
                { "matrix": [5,2], "x": 7, "y": 2},
                { "matrix": [5,3], "x": 8, "y": 2},
                { "matrix": [5,4], "x": 6, "y": 3}
            ]
        }
    }
}
